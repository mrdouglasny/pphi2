def generatingFunctional‚ÑÇ
    (Œº : Measure FieldConfig2) [IsProbabilityMeasure Œº]
    (J : TestFunction2‚ÑÇ) : ‚ÑÇ :=
  -- ‚ü®œâ, J‚ü©_‚ÑÇ = ‚ü®œâ, Re(J)‚ü© + i¬∑‚ü®œâ, Im(J)‚ü©
  -- Z[J] = ‚à´ exp(i ¬∑ ‚ü®œâ, J‚ü©_‚ÑÇ) dŒº(œâ)
  let f_re := schwartzRe J
